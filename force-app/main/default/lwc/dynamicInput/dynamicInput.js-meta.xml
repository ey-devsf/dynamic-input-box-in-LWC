<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Dynamic Input</masterLabel>
    <description>A dynamic input component that switches input field types based on data type parameter</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="fieldType" type="String" label="Field Type" 
                      description="Input field type (Text, Number, Date, DateTime, Picklist, Boolean)" 
                      default="Text" required="true"/>
            <property name="label" type="String" label="Field Label" 
                      description="Label for the input field"/>
            <property name="maxLength" type="Integer" label="Max Length" 
                      description="Maximum length for text fields"/>
            <property name="precision" type="Integer" label="Precision" 
                      description="Total number of digits for number fields"/>
            <property name="scale" type="Integer" label="Scale" 
                      description="Number of decimal places for number fields"/>
            <property name="defaultValue" type="String" label="Default Value" 
                      description="Initial value for the field"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
